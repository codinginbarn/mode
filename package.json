{
	"name": "mode",
	"displayName": "Mode: Your Personal AI Code Copilot",
	"description": "Mode directly connects to your favorite language models, providing secure, direct, and fully customizable AI coding support.",
	"version": "1.0.7",
	"preRelease": true,
	"publisher": "aruna-labs",
	"homepage": "https://www.getmode.dev",
	"private": true,
	"keywords": [
		"AI",
		"code",
		"copilot",
		"language models",
		"coding support",
		"ai",
		"c#",
		"c++",
		"code-referencing",
		"codex",
		"co-pilot",
		"documentation",
		"go",
		"golang",
		"intellisense",
		"java",
		"javascript",
		"keybindings",
		"kotlin",
		"openai",
		"php",
		"pilot",
		"python",
		"refactor",
		"ruby",
		"snippets",
		"typescript",
		"anthropic",
		"mistral",
		"google",
		"cohere"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Machine Learning",
		"Education",
		"AI",
		"Chat"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:mode.openChat",
		"onCommand:mode.showWelcomePage",
		"onView:mode.chatView"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/modedevteam/mode-community"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mode",
					"title": "Mode",
					"icon": "media/ModeDark.png"
				}
			]
		},
		"views": {
			"mode": [
				{
					"type": "webview",
					"id": "mode.chatView",
					"name": "Chat"
				}
			]
		},
		"commands": [
			{
				"command": "mode.openChat",
				"title": "Mode: Open Chat"
			},
			{
				"command": "mode.showWelcomePage",
				"title": "Mode: Show Welcome Page"
			},
			{
				"command": "mode.manageApiKeys",
				"title": "Mode: Manage API Keys"
			}
		],
		"keybindings": [
			{
				"command": "mode.openChat",
				"key": "ctrl+l",
				"mac": "cmd+l"
			}
		],
		"configuration": {
			"title": "Mode",
			"properties": {
				"mode.providers": {
					"order": 0,
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"enum": ["openai", "anthropic", "google", "mistral", "cohere"]
							},
							"models": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"visible": {
								"type": "boolean",
								"default": true
							}
						},
						"required": ["name", "models", "visible"]
					},
					"default": [
						{
							"name": "openai",
							"models": ["gpt-4o", "gpt-4o-mini"],
							"visible": true
						},
						{
							"name": "anthropic",
							"models": ["claude-3-5-sonnet-latest", "claude-3-5-haiku-20241022"],
							"visible": true
						},
						{
							"name": "google",
							"models": ["gemini-1.5-flash", "gemini-1.5-pro"],
							"visible": true
						},
						{
							"name": "mistral",
							"models": ["mistral-large-latest", "codestral-latest"],
							"visible": true
						},
						{
							"name": "cohere",
							"models": ["command-r-plus-08-2024", "command-light"],
							"visible": true
						}
					],
					"markdownDescription": "Configure AI providers and their models. Add or update models as they become available. To set up API keys, [click here](command:mode.manageApiKeys) or use 'Mode: Manage API Keys' command."
				},
				"mode.excludePatterns": {
					"order": 1,
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/node_modules/**",
						"**/.git/**",
						"**/dist/**",
						"**/build/**",
						"**/coverage/**",
						"**/out/**",
						"**/target/**",
						"**/bin/**",
						"**/obj/**",
						"**/__pycache__/**",
						"**/.DS_Store",
						"**/*.pyc",
						"**/.next/**",
						"**/.cache/**"
					],
					"description": "Patterns to exclude when searching for source files"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run obfuscate",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./",
		"obfuscate": "javascript-obfuscator out --output out --config obfuscator-config.json"
	},
	"devDependencies": {
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^20",
		"@types/uuid": "^10.0.0",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"esbuild": "^0.24.0",
		"eslint": "^8.26.0",
		"javascript-obfuscator": "^4.1.1",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.30.1",
		"@google/generative-ai": "^0.21.0",
		"@mistralai/mistralai": "^1.1.0",
		"@vscode/codicons": "0.0.36",
		"cohere-ai": "^7.14.0",
		"highlight.js": "^11.10.0",
		"markdown-it": "^14.1.0",
		"openai": "^4.68.4",
		"uuid": "^10.0.0"
	},
	"icon": "media/Mode.png",
	"files": [
		"media/"
	]
}