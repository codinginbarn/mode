{
	"name": "mode",
	"displayName": "Mode: Superhuman coding without compromise",
	"description": "Personal and autonomous coding agent that lets you code, refactor, fix issues, and build appsâ€”all with a single prompt. No third-party servers, token limits, or hidden upgrade fees.",
	"version": "1.0.25",
	"publisher": "aruna-labs",
	"license": "MIT",
	"homepage": "https://www.getmode.dev",
	"private": true,
	"keywords": [
		"AI",
		"agent",
		"code",
		"copilot",
		"language models",
		"coding support",
		"ai",
		"c#",
		"c++",
		"code-referencing",
		"codex",
		"co-pilot",
		"documentation",
		"go",
		"golang",
		"intellisense",
		"java",
		"javascript",
		"keybindings",
		"kotlin",
		"openai",
		"php",
		"pilot",
		"python",
		"refactor",
		"ruby",
		"snippets",
		"typescript",
		"anthropic",
		"mistral",
		"google",
		"cohere"
	],
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Machine Learning",
		"Education",
		"AI",
		"Chat"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:mode.openChat",
		"onCommand:mode.showWelcomePage",
		"onView:mode.chatView"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/modedevteam/mode"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mode",
					"title": "Mode",
					"icon": "media/ModeDark.png"
				}
			]
		},
		"views": {
			"mode": [
				{
					"type": "webview",
					"id": "mode.chatView",
					"name": "Chat"
				}
			]
		},
		"commands": [
			{
				"command": "mode.openChat",
				"title": "Mode: Open Chat"
			},
			{
				"command": "mode.showWelcomePage",
				"title": "Mode: Show Welcome Page"
			},
			{
				"command": "mode.manageApiKeys",
				"title": "Mode: Manage API Keys"
			},
			{
				"command": "mode.askMode",
				"title": "Mode: Ask About This"
			}
		],
		"keybindings": [
			{
				"command": "mode.openChat",
				"key": "ctrl+l",
				"mac": "cmd+l"
			}
		],
		"configuration": {
			"title": "Mode",
			"properties": {
				"mode.providers": {
					"order": 0,
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"enum": [
									"openai",
									"anthropic",
									"openrouter",
									"google",
									"mistral",
									"cohere",
									"local"
								]
							},
							"models": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										},
										"displayName": {
											"type": "string",
											"description": "A user-specified name for the model."
										},
										"endpoint": {
											"type": "string"
										},
										"vision": {
											"type": "boolean",
											"default": false
										},
										"largeContext": {
											"type": "boolean",
											"default": true,
											"markdownDescription": "Whether the model supports large context inputs needed for some Mode features (like Merge). Turned off for small local models."
										},
										"autocomplete": {
											"type": "boolean",
											"default": false
										}
									},
									"required": [
										"name"
									]
								}
							},
							"visible": {
								"type": "boolean",
								"default": true
							}
						},
						"required": [
							"name",
							"models",
							"visible"
						]
					},
					"default": [
						{
							"name": "openai",
							"models": [
								{
									"name": "gpt-4o",
									"displayName": "GPT-4o",
									"vision": true
								},
								{
									"name": "gpt-4o-mini",
									"displayName": "GPT-4o-mini",
									"vision": true,
									"autocomplete": true
								},
								{
									"name": "o1"
								},
								{
									"name": "o1-mini"
								}
							],
							"visible": true
						},
						{
							"name": "anthropic",
							"models": [
								{
									"name": "claude-3-5-sonnet-latest",
									"displayName": "Claude 3.5 Sonnet",
									"vision": true
								},
								{
									"name": "claude-3-5-haiku-latest",
									"displayName": "Claude 3.5 Haiku",
									"vision": true,
									"autocomplete": true
								}
							],
							"visible": true
						},
						{
							"name": "openrouter",
							"models": [
								{
									"name": "anthropic/claude-3.5-haiku-20241022",
									"displayName": "Claude 3.5 Haiku (OpenRouter)",
									"autocomplete": true
								},
								{
									"name": "openai/o1"
								},
								{
									"name": "x-ai/grok-2-1212",
									"displayName": "Grok 2"
								}
							],
							"visible": true
						},
						{
							"name": "google",
							"models": [
								{
									"name": "gemini-2.0-flash-exp",
									"displayName": "Gemini 2.0 Flash",
									"autocomplete": true
								},
								{
									"name": "gemini-2.0-flash-thinking-exp",
									"displayName": "Gemini 2.0 Flash Thinking",
									"autocomplete": true
								},
								{
									"name": "gemini-1.5-flash",
									"displayName": "Gemini 1.5 Flash",
									"autocomplete": true
								},
								{
									"name": "gemini-1.5-pro",
									"displayName": "Gemini 1.5 Pro"
								}
							],
							"visible": true
						},
						{
							"name": "mistral",
							"models": [
								{
									"name": "mistral-large-latest",
									"displayName": "Mistral Large"
								},
								{
									"name": "codestral-latest",
									"displayName": "Codestral",
									"autocomplete": true
								}
							],
							"visible": true
						},
						{
							"name": "cohere",
							"models": [
								{
									"name": "command-r-plus-08-2024",
									"displayName": "Command R Plus"
								},
								{
									"name": "command-light",
									"displayName": "Command Light",
									"autocomplete": true
								}
							],
							"visible": true
						},
						{
							"name": "local",
							"models": [
								{
									"name": "llama3.2",
									"displayName": "Llama 3.2 (Ollama)",
									"endpoint": "http://localhost:1234/v1",
									"autocomplete": true
								},
								{
									"name": "llama-3.2-3b-instruct",
									"displayName": "Llama 3.2 (LM Studio)",
									"endpoint": "http://localhost:1234/v1",
									"autocomplete": true
								}
							],
							"visible": true
						}
					],
					"markdownDescription": "Configure AI providers and their models for Mode Chat. Add or update models as they become available. To set up API keys, [click here](command:mode.manageApiKeys) or use 'Mode: Manage API Keys' command."
				},
				"mode.chat.additionalPrompt": {
					"order": 1,
					"type": "string",
					"default": "",
					"markdownDescription": "Add an additional prompt to the system prompt. This prompt will be added after the default system prompt."
				},
				"mode.chat.disablePrePrompt": {
					"order": 2,
					"type": "boolean",
					"default": false,
					"markdownDescription": "Prevent Mode from adding its own system prompt, providing a vanilla experience."
				},
				"mode.chat.promptOverride": {
					"order": 3,
					"type": "string",
					"default": "",
					"markdownDescription": "Replace Mode's default system prompt with your custom prompt. Examples: 'You are a helpful assistant.', 'Provide concise and accurate answers.', or 'Assist the user with coding queries in a friendly manner.'"
				},
				"mode.autocomplete.enabled": {
					"order": 4,
					"type": "boolean",
					"default": true,
					"description": "Enable or disable AI-powered autocompletion"
				},
				"mode.autocomplete.promptOverride": {
					"order": 5,
					"type": "string",
					"default": "",
					"markdownDescription": "Provide a custom prompt in markdown format for AI-powered autocompletion"
				},
				"mode.excludePatterns": {
					"order": 6,
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/node_modules/**",
						"**/.git/**",
						"**/dist/**",
						"**/build/**",
						"**/coverage/**",
						"**/out/**",
						"**/target/**",
						"**/bin/**",
						"**/obj/**",
						"**/__pycache__/**",
						"**/.DS_Store",
						"**/*.pyc",
						"**/.next/**",
						"**/.cache/**"
					],
					"description": "Patterns to exclude when searching for source files"
				},
				"mode.logging.enabled": {
					"order": 7,
					"type": "boolean",
					"default": false,
					"markdownDescription": "Enable storing streamed logs in global storage for debugging purposes"
				},
				"mode.logging.maxFileSize": {
					"order": 8,
					"type": "number",
					"default": 10,
					"markdownDescription": "Maximum size of log file in MB before rotation"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm run lint && tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "npm run lint && tsc -w -p ./",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/lodash": "^4.17.13",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^22",
		"@types/uuid": "^10.0.0",
		"@types/vscode": "^1.95.0",
		"@typescript-eslint/eslint-plugin": "^8.14.0",
		"@typescript-eslint/parser": "^8.14.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^8.57.1",
		"eslint-plugin-header": "^3.1.1",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.32.1",
		"@google/generative-ai": "^0.21.0",
		"@mistralai/mistralai": "^1.3.1",
		"@vscode/codicons": "0.0.36",
		"cohere-ai": "^7.14.0",
		"highlight.js": "^11.10.0",
		"lodash": "^4.17.21",
		"markdown-it": "^14.1.0",
		"openai": "^4.72.0",
		"uuid": "^11.0.3",
		"vscode-languageclient": "^9.0.1",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"icon": "media/Mode.png",
	"files": [
		"media/"
	]
}
